{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.4",
    "firebase/php-jwt": "^6.2",
    "illuminate/database": "^8.83",
    "illuminate/pagination": "^8.83",
    "laminas/laminas-diactoros": "^2.11",
    "psr/http-message": "^1.0",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App/",
      "Core\\": "src/Core/"
    }
  },

  "scripts": {
    "serve": "php -S localhost:3001 public/index.php",
    "db_migrate": "php -f src/migration.php",
    "db_seed": "php -f src/seeder.php"
  }
}
